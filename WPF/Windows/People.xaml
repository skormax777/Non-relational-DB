<Window x:Class="WPF.Windows.People"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Windows"
        mc:Ignorable="d"
        Height="350" Width="300"
        Background="WhiteSmoke"
        FontFamily="Georgia"
        ResizeMode="NoResize" 
        FontSize="22">
    <Grid Background="#FF243378">
        <ListBox Name="lbxPeople" Margin="20,20,20,50"  VerticalAlignment="Stretch" Background="#FF243378" BorderThickness="2" BorderBrush="White" Foreground="White"/>
        <Button Width="255" BorderThickness="2" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20,0,19.667,10" Content="Back" Background="#FF243378" Foreground="White" FontSize="20" Click="Cancel_Click" Height="30" BorderBrush="White"/>
    </Grid>
</Window>
